/**
 * Implements hook_transliteration_overrides_alter().
 */
function oct_transliteration_overrides_alter(&$overrides, $langcode) {
  // Capital letters (russian alphabet)
  $overrides += [
    0x0410 => 'A',
    0x0411 => 'B',
    0x0412 => 'V',
    0x0413 => 'G',
    0x0414 => 'D',
    0x0415 => 'E',
    0x0401 => 'Yo',
    0x0416 => 'Zh',
    0x0417 => 'Z',
    0x0418 => 'I',
    0x0419 => 'Y',
    0x041A => 'K',
    0x041B => 'L',
    0x041C => 'M',
    0x041D => 'N',
    0x041E => 'O',
    0x041F => 'P',
    0x0420 => 'R',
    0x0421 => 'S',
    0x0422 => 'T',
    0x0423 => 'U',
    0x0424 => 'F',
    0x0425 => 'H',
    0x0426 => 'C',
    0x0427 => 'Ch',
    0x0428 => 'Sh',
    0x0429 => 'Shch',
    0x042A => '',
    0x042B => 'Y',
    0x042C => '',
    0x042D => 'E',
    0x042E => 'Yu',
    0x042F => 'Ya',
  ];

  // Small letters (russian alphabet)
  $overrides += [
    0x0430 => 'a',
    0x0431 => 'b',
    0x0432 => 'v',
    0x0433 => 'g',
    0x0434 => 'd',
    0x0435 => 'e',
    0x0451 => 'yo',
    0x0436 => 'zh',
    0x0437 => 'z',
    0x0438 => 'i',
    0x0439 => 'y',
    0x043A => 'k',
    0x043B => 'l',
    0x043C => 'm',
    0x043D => 'n',
    0x043E => 'o',
    0x043F => 'p',
    0x0440 => 'r',
    0x0441 => 's',
    0x0442 => 't',
    0x0443 => 'u',
    0x0444 => 'f',
    0x0445 => 'h',
    0x0446 => 'c',
    0x0447 => 'ch',
    0x0448 => 'sh',
    0x0449 => 'shch',
    0x044A => '',
    0x044B => 'y',
    0x044C => '',
    0x044D => 'e',
    0x044E => 'yu',
    0x044F => 'ya',
  ];

  // Capital letters (ukrainian alphabet)
  $overrides += [
    0x0490 => 'G',
    0x0404 => 'YE',
    0x0407 => 'Yi',
  ];

  // Small letters (ukrainian alphabet)
  $overrides += [
    0x0491 => 'g',
    0x0454 => 'ye',
    0x0457 => 'yi',
  ];

  if ($langcode == 'uk') {
    // Capital letters (ukrainian alphabet)
    $overrides[0x0418] = 'Y';

    // Small letters (ukrainian alphabet)
    $overrides[0x0438] = 'y';
  }
}
